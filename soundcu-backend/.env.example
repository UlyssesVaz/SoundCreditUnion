# Database Configuration
DATABASE_URL=postgresql://soundcu:soundcu_password@localhost:5432/soundcu_db
ASYNC_DATABASE_URL=postgresql+asyncpg://soundcu:soundcu_password@localhost:5432/soundcu_db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/v1
PROJECT_NAME=Sound CU Co-Pilot API
VERSION=1.0.0
ENVIRONMENT=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,chrome-extension://*

# Redis Configuration (for caching & rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO

# ML Model Configuration
RECOMMENDATION_MODEL_PATH=./models/recommendation_model.pkl
MIN_RECOMMENDATIONS=3
MAX_RECOMMENDATIONS=5

# Feature Flags
ENABLE_ML_RECOMMENDATIONS=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
